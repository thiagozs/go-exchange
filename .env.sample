# Sample env for local development
LOG_FORMAT=text
LOG_LEVEL=debug

# App identification
APP_NAME=go-exchange
APP_VERSION=0.0.0
APP_ENV=development

# HTTP server
HTTP_ADDR=:8080

# Redis
REDIS_ADDR=localhost:6379
REDIS_DB=0

# Cache
CACHE_TTL=5m

# Exchange provider
# EXCHANGE_PROVIDER=
# EXCHANGE_API_KEY=

# BCB/PTAX settings
BCB_API_BASE_URL=https://olinda.bcb.gov.br/olinda/servico/PTAX/versao/v1/odata/
BCB_TIMEOUT_SECONDS=10s
BCB_MAX_RETRIES=3
BCB_MAX_BACK_DAYS=1

# OTLP
# OTLP HTTP example (usual):
# OTEL_COLLECTOR_URL=http://localhost:4318
# OTLP gRPC example (host:port or grpc://):
OTEL_COLLECTOR_URL=localhost:4317

# New OTLP advanced options
# Explicit OTLP endpoint (overrides OTEL_COLLECTOR_URL)
# OTLP_ENDPOINT=http://collector:4318
# Comma-separated headers for OTLP exporters, ex: "X-Api-Key=abc123,Auth=Bearer xyz"
# OTLP_HEADERS=
# Use TLS for OTLP (true/false)
# OTLP_USE_TLS=false
# Paths to TLS files (optional): CA, client cert and key
# OTLP_TLS_CA_PATH=/path/to/ca.pem
# OTLP_TLS_CERT_PATH=/path/to/cert.pem
# OTLP_TLS_KEY_PATH=/path/to/key.pem
# Skip verification (not recommended):
# OTLP_INSECURE_SKIP_VERIFY=false

# Feature flags
EXCHANGE_FEE_PERCENT=0.0
FEE_API_URL=
